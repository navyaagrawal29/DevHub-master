<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ImageCommentPage">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/imageStatus_commentsRV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp" />

    <EditText
        android:id="@+id/imageStatus_commentET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageStatus_commentsRV"
        android:layout_margin="10dp"
        android:background="@drawable/et_border"
        android:hint="@string/comment_hint"
        android:maxLength="100"
        android:paddingLeft="8dp"
        android:paddingTop="5dp"
        android:paddingRight="8dp"
        android:paddingBottom="5dp"
        android:textColorHint="#9400D3"
        android:textSize="14sp" />

    <Button
        android:id="@+id/imageStatus_commentAddCommentBtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/imageStatus_commentET"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/ic_addcomment" />


</RelativeLayout>