<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:id="@+id/model_techStatus_RV"
    android:background="@color/white">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:id="@+id/model_techStatus_favouriteTechStatus"
        android:layout_marginRight="10dp"
        android:background="#FFFF66"
        android:src="@drawable/ic_favorite_status"
        />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/profilepic"
        android:layout_margin="10dp"
        android:scaleType="centerCrop"
        android:id="@+id/model_techStatus_profileIV"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/model_techStatus_emailTV"
        android:layout_toEndOf="@+id/model_techStatus_profileIV"
        android:text="email@email.com"
        android:textColor="@color/black"
        android:paddingTop="10dp"
        android:paddingStart="10dp"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/model_techStatus_dateIV"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/model_techStatus_emailTV"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/model_techStatus_profileIV"
        android:text="00:00:00 00 Jan 2021"
        android:textColor="@color/black"
        android:textSize="10sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="5dp"
        android:id="@+id/model_techStatus_techStatusTV"
        android:text="This is dummy status"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:layout_below="@+id/model_techStatus_profileIV"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/model_techStatus_LinearLayout"
        android:orientation="horizontal"
        android:layout_below="@+id/model_techStatus_techStatusTV">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/model_techStatus_heartIV"
            android:src="@drawable/ic_heart"
            android:scaleType="centerCrop"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            />

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/model_techStatus_heartCountTV"
            android:text="0"
            android:layout_marginLeft="5dp"
            android:layout_gravity="bottom|left"
            android:textColor="@color/black"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/model_techStatus_hahaIV"
            android:src="@drawable/ic_haha"
            android:scaleType="centerCrop"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            />

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/model_techStatus_hahaCountTV"
            android:text="0"
            android:layout_marginLeft="5dp"
            android:layout_gravity="bottom|left"
            android:textColor="@color/black"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/model_techStatus_sadIV"
            android:src="@drawable/ic_sad"
            android:scaleType="centerCrop"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            />

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/model_techStatus_sadCountTV"
            android:text="0"
            android:layout_marginLeft="5dp"
            android:layout_gravity="bottom|left"
            android:textColor="@color/black"/>

       <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/model_techStatus_commentIV"
            android:src="@drawable/ic_comments"
            android:scaleType="centerCrop"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            />

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/model_techStatus_commentCount"
            android:text="0"
            android:layout_marginLeft="5dp"
            android:layout_gravity="bottom|left"
            android:textColor="@color/black"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/model_techStatus_deleteIV"
            android:src="@drawable/ic_deleteicon"
            android:scaleType="centerCrop"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            />

<!--        <TextView-->
<!--            android:layout_width="30dp"-->
<!--            android:layout_height="30dp"-->
<!--            android:id="@+id/model_techStatus_deleteCount"-->
<!--            android:layout_marginLeft="5dp"-->
<!--            android:layout_gravity="bottom|left"-->
<!--            android:textColor="@color/black"/>-->
    </LinearLayout>
</RelativeLayout>